                              "ATTBONUS_UNDEAD",
                              "ATTBONUS_DEVIL",
                              "ATTBONUS_HUMAN",
                              "ADD_BOW_DISTANCE",
                              "DODGE",
                              "BLOCK",
                              "RESIST_SWORD",
                              "RESIST_TWOHAND",
                              "RESIST_DAGGER",
                              "RESIST_BELL",
                              "RESIST_FAN",
                              "RESIST_BOW",
                              "RESIST_FIRE",
                              "RESIST_ELEC",
                              "RESIST_MAGIC",
                              "RESIST_WIND",
                              "REFLECT_MELEE",
                              "REFLECT_CURSE",
                              "RESIST_ICE",
                              "RESIST_EARTH",
                              "RESIST_DARK",
                              "RESIST_CRITICAL",
                              "RESIST_PENETRATE",
                              "POISON",
                              "SLOW",
                              "SLOW_PCT",
                              "STUN",
                              "STUN_PCT",
                              "STEAL_HP",
                              "STEAL_SP",
                              "MANA_BURN_PCT",
                              "CRITICAL",
                              "PENETRATE",
                              "KILL_SP_RECOVER",
                              "KILL_HP_RECOVER",
                              "PENETRATE_PCT",
                              "CRITICAL_PCT",
                              "POISON_PCT",
                              "ATT_BONUS_TO_WARRIOR",
                              "ATT_BONUS_TO_ASSASSIN",
                              "ATT_BONUS_TO_SURA",
                              "ATT_BONUS_TO_SHAMAN",
                              "ATT_BONUS_TO_MONSTER",
                              "ATT_BONUS_TO_MOB",
                              "ATTBONUS_MONSTER",
                              "MALL_ATTBONUS",
                              "MALL_EXPBONUS",
                              "MALL_DEFBONUS",
                              "MALL_ITEMBONUS",
                              "MALL_GOLDBONUS",
                              "MAX_HP_PCT",
                              "MAX_SP_PCT",
                              "SKILL_DAMAGE_BONUS",
                              "NORMAL_HIT_DAMAGE_BONUS",
