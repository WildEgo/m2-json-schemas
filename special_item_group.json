                          },
                          {
                            "type": "number"
                          }
                        ]
                      },
                      "apply_value": {
                        "type": "number"
                      }
                    },
                    "additionalProperties": false
                  }
                }
              }
            },
            "else": {
              "properties": {
                "rows": {
                  "items": {
                    "type": "object",
                    "required": [
                      "vnum",
                      "count",
                      "probability",
                      "rare_percentage"
                    ],
                    "properties": {
                      "vnum": {
                        "oneOf": [
                          {
                            "type": "string",
                            "enum": [
                              "exp",
                              "mob",
                              "slow",
                              "drain_hp",
                              "poison",
                              "group",
                              "gold"
                            ]
                          },
                          {
                            "type": "number"
                          }
                        ]
                      },
                      "count": {
                        "type": "number"
                      },
                      "probability": {
                        "type": "number"
                      },
                      "rare_percentage": {
                        "type": "number"
                      },
                      "sockets": {
